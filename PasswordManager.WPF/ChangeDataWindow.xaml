<Window x:Class="PasswordManager.WPF.ChangeDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.WPF"
        mc:Ignorable="d"
        Title="Изменить запись" Height="300" Width="500">
    <Grid>
        <Label Content="URL" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Height="25" Width="60"/>
        <TextBox x:Name="Url" Margin="105,20,105,237" Width="290" Height="24"/>

        <Label Content="Логин" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Height="25" Width="60"/>
        <TextBox x:Name="Login" Margin="105,50,105,209"/>

        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Height="25" Width="60" RenderTransformOrigin="0.482,-0.345"/>
        <TextBox x:Name="Password" Margin="105,80,105,177"  />

        <Button Content="Создать" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" Width="128" Height="50" Click="Button_Click"/>
    </Grid>
</Window>
