<Window x:Class="PasswordManager.WPF.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.WPF"
        mc:Ignorable="d"
        Title="Registration" Width="650" Height="auto"
        MinWidth="650" MinHeight="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="Мастер-пароль:" Margin="10" Width="100" VerticalAlignment="Center" />
                <TextBox Grid.Column="1" Grid.Row="0" x:Name="EntryPassword" Margin="10" Height="30" TextChanged="CheckPassword" />

                <TextBlock Grid.Column="0" Grid.Row="1" Text="Повторите&#xD;&#xA;Мастер-пароль:" Margin="10" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Grid.Row="1" x:Name="CheckEntryPassword" Margin="10" Height="30" TextChanged="CheckMatch" />
            </Grid>
            <Button Content="Ввод" Width="100" Height="30" Margin="10" HorizontalAlignment="Center" Click="ButtonOkClick"/>

        </StackPanel>

        <ListView Grid.Column="1" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <TextBlock Text="Пароль должен соответствовать следующим&#xD;&#xA;параметрам:" />

            <TextBlock x:Name="passLenLabel" Text="- от 12 до 20 символов" Foreground="Red" />
            <TextBlock x:Name="consecutiveCharactersLabel" Text="- не использовать подряд идущие символы" Foreground="Green"/>
            <TextBlock x:Name="prohibitedSymbolsLabel" Text="- не использовать запрещённые символы: &#xD;&#xA;кириллица, «/», «@», « », «?»" Foreground="Green"/>
            <TextBlock x:Name="characterRegisterLabel" Text="- использовать символы разных регистров" Foreground="Red"/>
            <TextBlock x:Name="allTypeSymbolsLabel" Text="- использовать все виды символов" Foreground="Red" />

            <TextBlock Text="Вам также следует воздержаться от использования&#xD;&#xA;следующих персональных идентификаторов:&#xD;&#xA;- Имена родственников, друзей и домашних животных&#xD;&#xA;- Номера телефонов&#xD;&#xA;- Адреса и места которые вы регулярно посещаете &#xD;&#xA;- Дни рождения, годовщины, выпускные&#xD;&#xA;и любимые праздники &#xD;&#xA;- Псевдонимы или фразы, связанные с вами" />

        </ListView>
    </Grid>
</Window>
