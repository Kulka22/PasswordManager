<Window x:Class="PasswordManager.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.WPF"
        mc:Ignorable="d"
        Title="Менеджер паролей" Height="600" Width="1000"
        MinWidth="900">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Content="Добавить запись" HorizontalAlignment="Left" Margin="10" Height="40" Width="110" Command="{Binding AddCommand}"/>

        <ListBox Grid.Row="1" Grid.Column="0" ItemsSource="{Binding FilteredPasswords}" BorderThickness="0" HorizontalAlignment="Stretch" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <!-- Текстовые поля -->
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding Service}" Width="80" Margin="5" IsReadOnly="True" />
                            <TextBox Text="{Binding Category}" Width="80" Margin="5" IsReadOnly="True" />
                            <TextBox Text="{Binding Url}" Width="100" Margin="5" IsReadOnly="True"/>
                            <TextBox Text="{Binding Login}" Width="100" Margin="5" IsReadOnly="True"/>
                            <TextBox Text="{Binding Password}" Width="100" Margin="5" IsReadOnly="True"/>
                        </StackPanel>
                        <!-- Кнопки -->
                        <StackPanel Orientation="Horizontal">
                            <Button Command="{Binding ToggleVisibilityCommand }" Margin="5" Width="30" Height="30">
                                <Image Source="/Images/eye.png" Width="20" Height="20" Stretch="Uniform"/>
                            </Button>
                            <Button Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" Margin="5" Width="30" Height="30">
                                <Image Source="/Images/pencil.png" Width="20" Height="20"/>
                            </Button>
                            <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" Margin="5" Width="30" Height="30">
                                <Image Source="/Images/close.png" Width="20" Height="20"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <Expander Grid.Row="1" Grid.Column="1" Header="Категории" HorizontalAlignment="Left" MinWidth="150">
            <ItemsControl ItemsSource="{Binding Categories}">
            <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}"
                                  IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Expander>
    </Grid>
</Window>
