<Window x:Class="PasswordManager.WPF.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.WPF"
        mc:Ignorable="d"
        Title="Sign In" Height="130" Width="280"
        MinHeight="130" MinWidth="280" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" Grid.Column="0" Margin="10,0,0,0" Text="Мастер-пароль:" VerticalAlignment="Center" />
        <PasswordBox Grid.Row="0" Grid.Column="1" x:Name="EntryPassword" Margin="10,0,10,0" HorizontalAlignment="Stretch" Height="30" />


        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="5" >
            <Button Content="Ввод" Margin="1" Height="30" Width="100" HorizontalAlignment="Center" Click="ButtonOkClick"/>
            <TextBlock x:Name="ErrorLabel" Text="Неправильный мастер-пароль" Margin="1" HorizontalAlignment="Center" Foreground="Red" Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
