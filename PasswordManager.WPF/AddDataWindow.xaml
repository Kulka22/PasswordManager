<Window x:Class="PasswordManager.WPF.AddDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.WPF"
        mc:Ignorable="d"
        Title="Изменить запись" Height="400" Width="600">
    <Grid>
        <Label Content="URL" Margin="10,20,0,0" VerticalAlignment="Top" Height="25" HorizontalAlignment="Left" Width="60"/>
        <TextBox Text="{Binding URL, UpdateSourceTrigger=PropertyChanged}" Margin="155,20,155,0" Height="25" VerticalAlignment="Top"/>

        <Label Content="Логин" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Height="25" Width="60"/>
        <TextBox Text="{Binding NewLogin, UpdateSourceTrigger=PropertyChanged}" Margin="155,71,155,0" Height="25" VerticalAlignment="Top"/>

        <Label Content="Пароль" HorizontalAlignment="Left" Margin="10,120,0,0" VerticalAlignment="Top" Height="25" Width="60" RenderTransformOrigin="0.482,-0.345"/>
        <TextBox Text="{Binding NewPassword, UpdateSourceTrigger=PropertyChanged}" Margin="155,120,155,0" Height="25" VerticalAlignment="Top"/>

        <Button Content="Сохранить" HorizontalAlignment="Center" Margin="0,324,0,0" VerticalAlignment="Top" Width="128" Height="50"/>
    </Grid>
</Window>
