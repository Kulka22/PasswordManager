<Window x:Class="PasswordManager.WPF.AddDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.WPF"
        mc:Ignorable="d"
        Title="Изменить запись" Height="300" Width="400">
    <Grid>
        <ListBox Margin="20,20,0,20" VerticalAlignment="Top" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label Content="Service" Height="25" Width="60" />
                <TextBox x:Name="ServiceText" Height="25" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <!--Место для категорий-->
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="URL" Height="25" Width="60"/>
                <TextBox x:Name="UrlText" Height="25" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Логин" Height="25" Width="60"/>
                <TextBox x:Name="LoginText" Height="25" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Пароль" Height="25" Width="60" />
                <TextBox x:Name="PasswordText" Height="25" Width="200" />
            </StackPanel>
        </ListBox>





        <Button Content="Сохранить" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="128" Height="50" Click="ButtonOkClick"/>
    </Grid>
</Window>
